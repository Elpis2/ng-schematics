{
  "$schema": "http://json-schema.org/schema",
  "id": "RegridComponent",
  "title": "Regrid Component Options Schema",
  "description": "Regrid Component",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the component",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What would you like to name this component?"
    },
    "project": {
      "type": "string",
      "description": "Generate in specific Angular CLI workspace project"
    }
  },
  "required": [
    "name"
  ]
}
