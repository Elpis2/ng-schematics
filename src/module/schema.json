{
  "$schema": "http://json-schema.org/schema",
  "id": "RegridModule",
  "title": "Regrid Module Options Schema",
  "description": "Regrid Module",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the module",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What would you like to name this module?"
    },
    "project": {
      "type": "string",
      "description": "Generate in specific Angular CLI workspace project"
    }
  },
  "required": [
    "name"
  ]
}
